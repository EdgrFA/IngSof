package com.alumnos.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.alumnos.models.Materias;
import com.alumnos.repositories.MateriaRepository;

@RestController    // This means that this class is a Controller
public class MateriaController {
	
	@Autowired
	private MateriaRepository materiaRepo;

	@GetMapping(path="/add")
	public @ResponseBody String crearMateria (@RequestParam String nombre, @RequestParam String grupo) {
		Materias materia = new Materias(nombre,grupo);
		materiaRepo.save(materia);
		return "Saved";
	}

	@GetMapping(path="/all")
	public @ResponseBody Iterable<Materias> buscarMaterias() {
		return materiaRepo.findAll();
	}
}